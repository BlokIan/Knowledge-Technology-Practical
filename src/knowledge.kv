#:kivy 2.3.0

###############
# SCREEN MANAGER
###############
<Manager>:
    canvas.before:
        Color:
            rgba: 255,255,255,0.8
        Rectangle:
            pos: self.pos
            size: self.size

    ScreenManager:
        id: screen_manager
        StartingPage:
            id: starting_page
            name: 'starting_page'
        FirstPage:
            id: first_page
            name: 'first_page'
        SecondPage:
            id: second_page
            name: 'second_page'


###############
# STARTING PAGE
###############
<StartingPage>:
    GridLayout:
        cols: 1
        Button:
            text: 'start'
            size_hint: 0.5, 0.5
            on_release: app.switch_to_next_page()



###############
# FIRST PAGE
###############
<FirstPage>:
    id: first_page
    # I don't really understand why you need cols and rows here rn
    cols: 2
    rows: 4

    RelativeLayout:
        # Button for previous page
        Button:
            text: root.previous_button
            size_hint: 0.2, 0.2
            pos_hint: {'x': 0, 'y': 0}
            on_release: app.switch_to_previous_page()

        # Button for next page
        Button:
            text: root.next_button
            size_hint: 0.2, 0.2
            pos_hint: {'right': 1, 'y': 0}
            on_release: app.switch_to_next_page()

        # Question text
        Label:
            text: root.title
            color: 0,0,0,1
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            font_size: 25

        # Status text
        Label:
            text: root.status
            color: 0,0,0,1
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            font_size: 20

        # Radio buttons
        GridLayout:
            id: radio_group
            canvas:
                Color:
                    rgba: 1, 1, 1, 1  # Set the background color (R, G, B, Alpha)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            cols: 2
            rows: 2
            size_hint: 0.4, 0.4
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}

            Label:
                text: root.radio_text_1
                color: 0,0,0,1
            CheckBox:
                id: radio_1
                group: 'answer_1'
                active: True
                allow_no_selection: False
                value: 'option_1'
            Label:
                text: root.radio_text_2
                color: 0,0,0,1
            CheckBox:
                id: radio_2
                group: 'answer_1'
                active: False
                allow_no_selection: False
                value: 'option_2'


